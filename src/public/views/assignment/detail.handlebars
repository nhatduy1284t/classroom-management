<h1>{{assignment.assignment_name}}</h1>
{{#if assignment.file_url}}
  <div class="assignment-file">
    <h4>File:</h4>
    <p><a href="{{assignment.file_url}}" target="_blank" class="display-4">File
        đề bài</a></p>
  </div>
{{/if}}

<h4>Description</h4>
<p class="assignment-description alert alert-primary">{{assignment.description}}
</p>
{{! Teacher }}
{{#ifEquals user.user_type "1"}}
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Student Name</th>
          <th>Work Submitted</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>John Doe</td>
          <td><a href="john_doe_work.pdf">John Doe's Work</a></td>
        </tr>
        <tr>
          <td>Jane Smith</td>
          <td><a href="jane_smith_work.pdf">Jane Smith's Work</a></td>
        </tr>
        <!-- Add more rows for other students -->
      </tbody>
    </table>

  </div>

{{/ifEquals}}
{{! Student }}
{{#ifEquals user.user_type "0"}}
  <div class="submission">
    <div class="student-table table-responsive">
      <h3>Submission status</h3>
      <table class="table table-striped table-bordered table-hover">
        <thead>
          {{! <tr>
            <th></th>
            <th></th>
          </tr> }}
        </thead>
        <tbody>
          <tr>
            <td>Grade</td>
            <td>Not graded yet</td>
          </tr>
          <tr>
            <td>Start date</td>
            <td>{{assignment.start_date}}</td>
          </tr>
          <tr>
            <td>Due date</td>
            <td>{{assignment.due_date}}</td>
          </tr>
          <tr>
            <td>File submission</td>
            <td><a
                href="{{submission.file_url}}"
              >{{submission.file_name}}</a></td>
          </tr>
          <!-- Add more rows for other students -->
        </tbody>
      </table>
      {{#if submission}}
        <form
          class="btn-submit-wrapper"
          method="post"
          action="/assignment/changesubmit"
          action="asd"
          enctype="multipart/form-data"
        >
          <input type="hidden" name="student_id" value="{{user._id}}" />
          <input type="hidden" name="submission_submitted_id" value="{{submission._id}}" />
          <input
            type="hidden"
            name="assignment_id"
            value="{{assignment._id}}"
          />
          <input type="file" id="submission-file" name="file" />
          <button
            class="btn-submit btn btn-primary"
            type="submit"
          >Submit</button>
        </form>
      {{else}}
        <form
          class="btn-submit-wrapper"
          method="post"
          action="/assignment/submit"
          action="asd"
          enctype="multipart/form-data"
        >
          <input type="hidden" name="student_id" value="{{user._id}}" />
          <input
            type="hidden"
            name="assignment_id"
            value="{{assignment._id}}"
          />
          <input type="file" id="submission-file" name="file" />
          <button
            class="btn-submit btn btn-primary"
            type="submit"
          >Submit</button>
        </form>
      {{/if}}
    </div>
  </div>
{{/ifEquals}}

<style>
  .assignment-file { display:flex; align-items: center; } .assignment-file h4 {
  margin: 0; margin-right: 5px; } .assignment-description { padding: 15px;
  color: #004085; background-color: #cce5ff; border-color: #b8daff; }
  .submission { display:flex; } .student-table { width: 100%; }
  .btn-submit-wrapper { display:flex; justify-content: center; flex-direction:
  column; align-items: center; } .btn-submit-wrapper button{ margin-top:10px;
  padding:8px 18px; display:none; }
</style>
<script>
  let inputFile = document.querySelector("#submission-file"); let btnSubmit =
  document.querySelector(".btn-submit"); console.log(inputFile)
  document.querySelector("#submission-file").addEventListener('change',(e) => {
  if(e.target.value == "") { btnSubmit.style.display ="none"; } else {
  btnSubmit.style.display ="initial"; } })
</script>