                  <a href="/assignment/{{_id}}">{{assignment_name}}</a>
                  </td>
                <td>March 15th, 2023</td>
                <td>Not Submitted</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
