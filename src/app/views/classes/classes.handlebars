<!--Content starts here-->
<div class="panel-body">
  <button
    class="btn btn-success btn-md"
    data-toggle="modal"
    data-target="#myModal"
  >
    Add new class
  </button>
  <div
    class="modal fade"
    id="myModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="myModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-hidden="true"
          >
            &times;
          </button>
          <h4 class="modal-title" id="myModalLabel">Create new class</h4>
        </div>
        <div class="modal-body">
          <form
            id="create-class-form"
            role="form"
            method="post"
            action="/class/create"
          >
            <div class="form-group">
              <label>Class name</label>
              <input
                id="course-name"
                class="form-control"
                placeholder="PLease enter the class name."
                name="class_name"
              />
            </div>
            <div class="form-group">
              <label>Start date</label>
              <input
                id="start-datepicker"
                onchange="checkDate()"
                type="date"
                class="form-control"
                autocomplete="off"
                name="start_date"
              />
            </div>
            <div class="form-group">
              <label>End date</label>
              <input
                id="end-datepicker"
                type="date"
                onchange="checkDate()"
                class="form-control"
                autocomplete="off"
                name="end_date"
              />
            </div>
            {{! <div class="form-group">
              <label>Description</label>
              <input
                id="course-desctiption"
                class="form-control"
                placeholder="A short description (if any), approx 100 words."
              />
            </div> }}
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">
            Close
          </button>
          <button id="create-class-btn" type="submit" class="btn btn-success">
            Create
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <!-- Advanced Tables -->
    <div class="panel panel-default">
      <div class="panel-heading">List of classes</div>
      <div class="panel-body">
        <div class="table-responsive">
          <table
            class="table table-striped table-bordered table-hover display"
            id="dataTables-example"
            style="width: 100%"
          >
            <thead>
              <tr>
                {{!-- <th>ID</th> --}}
                <th>Class name</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Teacher</th>
              </tr>
            </thead>
            <tbody>
              {{#each classes}}
                <tr>
                  {{!-- <th scope="row">123</th> --}}
                  <th scope="row">{{class_name}}</th scope="row">
                  <td>{{start_date}}</td>
                  <td>{{end_date}}</td>
                  <td>Bobby Yangho</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!--End Advanced Tables -->
  </div>
</div>
